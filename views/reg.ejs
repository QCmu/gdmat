<% include header.ejs %>
<form class="form-horizontal" method="post">
<fieldset>
<legend>Registration</legend>
<div class="form-group">
    <label for="username" class="col-sm-2 control-label">Username</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="username" name="username" placeholder="username">
      <p class="help-block">Your account name, for login and display</p>
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-4">
      <input type="password" class="form-control" id="password" name="password" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <label for="password-repeat" class="col-md-2 control-label">Repeat Password</label>
    <div class="col-md-4">
      <input type="password" class="form-control" id="password-repeat" name="password-repeat" placeholder="Repeat Password">
    </div>
  </div>
<div class="form-group" >
  <div class="col-sm-offset-2 col-sm-10">
<button type="submit" class="btn btn-primary">Register</button>
  </div>
</div>
</fieldset>
</form>
<% include footer.ejs %>